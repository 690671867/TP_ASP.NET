<!DOCTYPE html>
<html lang="fr">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mon application ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
       @* @Styles.Render("~/Content/css")*@
       @* @Scripts.Render("~/bundles/modernizr")*@
         <link href="Font/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">


       @Styles.Render("~/CSS/css/bootstrap.min.css")

    @Styles.Render("~/CSS/css/modern-business.css")

   

    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("ISI", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                            <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Service", "Service", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
           
        </header>
         <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
             @*   <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide One');"></div>*@
                <img src="images/images.jpg">
                <div class="carousel-caption">
                    <h2>NOS ETUDIANTS</h2>

                </div>
            </div>
            <div class="item">
               @* <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Two');"></div>*@
                <img src="images/images3.jpg">
                <div class="carousel-caption">
                    <h2>REMISE DES DIPLOMES</h2>
                </div>
            </div>
            <div class="item">
               @* <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Three');"></div>*@
                <img src="images/images2.jpg">
                <div class="carousel-caption">
                    <h2>Nos DIPLOMES</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Mon application ASP.NET MVC</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
         
     <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        })
    </script>
    </body>
</html>
